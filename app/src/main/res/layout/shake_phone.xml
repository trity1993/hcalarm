<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shake_ll"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/blue_bottom"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shake_sence_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="次数:0"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <Chronometer
            android:id="@+id/cm_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_battery_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/battery_bg" />

        <ImageView
            android:id="@+id/iv_lighting_left_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lighting_left_big"
            android:layout_marginTop="27dp"
            android:layout_toLeftOf="@+id/iv_battery_bg"
            android:src="@drawable/left_small" />

        <ImageView
            android:id="@+id/iv_lighting_right_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lighting_right_big"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/iv_battery_bg"
            android:src="@drawable/right_small" />

        <ImageView
            android:id="@+id/iv_lighting_left_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_battery_bg"
            android:layout_marginTop="61dp"
            android:layout_toLeftOf="@+id/iv_lighting_left_small"
            android:src="@drawable/left_big" />

        <ImageView
            android:id="@+id/iv_lighting_right_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_lighting_left_big"
            android:layout_toRightOf="@+id/iv_lighting_right_small"
            android:src="@drawable/right_big" />

        <ImageView
            android:id="@+id/iv_lighting_right_smaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lighting_right_big"
            android:layout_toRightOf="@+id/iv_lighting_right_big"
            android:src="@drawable/right_smaller" />

        <ImageView
            android:id="@+id/iv_lighting_right_small_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_battery_bg"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/iv_lighting_right_small"
            android:src="@drawable/right_small_last" />

        <ImageView
            android:id="@+id/iv_lighting_left_small_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_lighting_right_small_last"
            android:layout_alignRight="@+id/iv_lighting_left_big"
            android:src="@drawable/left_small_last" />

        <ImageView
            android:id="@+id/iv_lighting_right_biger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_lighting_right_small"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@+id/iv_lighting_right_small"
            android:src="@drawable/right_biger" />

        <ImageView
            android:id="@+id/iv_lighting_left_biger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_lighting_right_biger"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/iv_lighting_left_small"
            android:src="@drawable/left_biger" />
    </RelativeLayout>

</LinearLayout>